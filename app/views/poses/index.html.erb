<div class="container">
<h4><%= t('view.pose')%><%= t('view.index') %></h4>

<%= search_form_for @q do |f| %>
<div class="form-inline">
  <div class="form-group">
    <%= f.label :name_cont, "ポーズ名" %>
    &nbsp;
    &nbsp;
    <%= f.search_field :name_cont, class: "form-control" %>
  </div>
  &nbsp;
  &nbsp;

  <div class="form-group">
    <%= f.label :sans_name_cont, "ポーズ名(サンスクリット語)" %>
    &nbsp;
    &nbsp;
    <%= f.search_field :sans_name_cont, class: "form-control" %>
  </div>
  &nbsp;
  &nbsp;

  <div class="form-group">
    <%= f.label :effects_id_eq, "効果" %>
    &nbsp;
    &nbsp;
    <%= f.collection_select :effects_id_eq, Effect.all,:id, :name, {include_blank: true}, {class: "form-control"} %>  </div>
</div>
<p style="margin: 2px">&nbsp;</p>
<br>
  <%= f.submit "検索", class: "btn btn-outline-primary" %>
  &nbsp;
  &nbsp;
  <%= link_to '検索条件のクリア', request.path, class: "btn btn-outline-secondary btn-sm" %>
<% end %>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('view.pose_name') %></th>
      <th><%= t('view.pose_detail') %></th>
      <th><%= t('view.pose_name_sans') %></th>
    </tr>
  </thead>

  <tbody>
    <% @poses.each do |pose| %>
      <tr>
        <td><%= pose.name %></td>
        <td><%= pose.detail %></td>
        <td><%= pose.sans_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @poses %>
</div>
