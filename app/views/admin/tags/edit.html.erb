<div class="container">

  <h5 class="h5-responsive" align="center"><%= t('view.tag') %>を編集</h5>
  <%= form_with(model: @tag, url: admin_tag_path, local: true ) do |form| %>
     <% if @tag.errors.any? %>
      <div id="error_explanation">
        <h5 class="h5-responsive"><%= pluralize(@tag.errors.count, "つのエラー") %> が存在しているため、保存出来ません:</h5>
        <ul>
          <% @tag.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.text_field :name, id: :tag_name, class: "form-control" %>
    </div><br>

    <div class="actions" align="center">
      <%= form.submit class: "btn indigo accent-1 mr-3" %>
      <%= link_to '削除', admin_tag_path(@tag), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-outline-danger mr-3" %>
    </div>
  <% end %>

  <p class="m-5"></p>

  <div align="center">
    <%= link_to '戻る', admin_tags_path, class: "btn purple lighten-4" %>
  </div>
</div>
