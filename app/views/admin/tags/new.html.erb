<div class="container">

<h5 class="h5-responsive"><%= t('view.tag') %>を追加</h5>

<%= form_with(model: @tag, url: admin_tags_path, local: true ) do |form| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h5 class="h5-responsive"><%= pluralize(@tag.errors.count, "error") %> が存在しているため、保存出来ません:</h5>

      <ul>
      <% @tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, id: :tag_name, class: "form-control" %>
  </div>

  <div class="actions" align="center">
    <%= form.submit class: "btn indigo accent-1" %>
    <%= link_to '戻る', admin_index_path, class: "btn purple lighten-4" %>
  </div>
<% end %>
</div>
