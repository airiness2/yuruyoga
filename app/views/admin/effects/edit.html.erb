<div class="container">
<h4><%= t('view.effect') %>を編集</h4>
<%= form_with(model: @effect, url: admin_effect_path, local: true ) do |form| %>
  <% if @effect.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@effect.errors.count, "error") %> が存在しているため、保存出来ません:</h4>

      <ul>
      <% @effect.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, id: :effect_name, class: "form-control" %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-primary" %>
  </div>
<% end %>
</div>
<br>

<%= link_to '戻る', admin_effects_path, class: "btn btn-outline-secondary btn-sm" %>
</div>
