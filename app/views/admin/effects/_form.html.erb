<%= form_with(model: @effect, url: admin_effects_path, local: true ) do |form| %>
  <% if effect.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(effect.errors.count, "error") %> が存在しているため、保存出来ません:</h4>

      <ul>
      <% effect.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, id: :effect_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
