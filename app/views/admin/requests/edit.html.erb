<div class="container">
<h5 class="h5-responsive"><%= t('view.request') %>を編集</h5>
<%= form_with(model: @request, url: admin_request_path, local: true ) do |form| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h5 class="h5-responsive"><%= pluralize(@request.errors.count, "error") %> が存在しているため、保存出来ません:</h5>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_area :body, id: :request_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Request.statuses.keys.to_a, {}, {class: "form-control"} %>
  </div>

  <br>

  <div class="inline" align="center">
  <div class="actions">
    <%= form.submit class: "btn indigo accent-1" %>
  <%= link_to '戻る', admin_index_path, class: "btn purple lighten-4" %>
  </div>
  </div>
  <% end %>

</div>
