<div class="container">
  <div class="col-12">
    <table class="table" width="100%">
      <tr>
        <th><%= t('view.pose_name') %></th>
        <td><%= @pose.name %></td>
      </tr>
      <tr>
        <th><%= t('view.pose_name_sans') %></th>
        <td><%= @pose.sans_name %></td>
      </tr>
      <tr>
        <th><%= t('view.effect') %></th>
        <td>
          <% @pose.effect_ids.each do |effect| %>
            <label><%= Effect.find(effect).name %></label>
          <% end %>
        </td>
      </tr>
      <tr>
        <th><%= t('view.pose_detail') %></th>
        <td><%= @pose.detail %></td>
      </tr>
      <tr>
        <th><%= t('view.pose_image') %></th>
        <td><%= image_tag(@pose.image.url) if @pose.image && @pose.image.url %></td>
      </tr>
      <tr>
        <td colspan="2" align="center">
          <%= link_to '編集', edit_admin_pose_path(@pose), class: "btn indigo accent-1 mr-3" %>
          <%= link_to '削除', admin_pose_path(@pose), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-outline-danger mr-3" %>
        </td>
      </tr>
    </table>
    <div align="center">
      <%= link_to '戻る', admin_poses_path, class: "btn purple lighten-4" %>
    </div>
  </div>
</div>
