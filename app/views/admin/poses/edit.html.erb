<div class="container">

<h4><%= t('view.pose') %>を編集</h4>

<%= form_with(model: @pose, url: admin_pose_path, local: true ) do |form| %>
  <% if @pose.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@pose.errors.count, "error") %> が存在しているため、保存出来ません:</h4>

      <ul>
      <% @pose.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :pose_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sans_name %>
    <%= form.text_field :sans_name, id: :pose_sans_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :effect %>
    <%= form.select( :effect_id, Effect.all.map { |effect| [effect.name, effect.id] }, {}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= form.label :detail %>
    <%= form.text_area :detail, id: :pose_detail, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= image_tag(@pose.image.url) if @pose.image && @pose.image.url %>
    <%= form.file_field :image , class: "form-control-file" %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-primary" %>
  </div>
<% end %>
</div>

<br>

<%= link_to '戻る', admin_poses_path, class: "btn btn-outline-secondary btn-sm"  %>
</div>
