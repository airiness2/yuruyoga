<%= form_with(model: @event, local: true ) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@event.errors.count, "error") %> が存在しているため、保存出来ません:</h4>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :hold_date %>
    <%= form.datetime_select :hold_date, id: :event_hold_date %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail, id: :event_detail %>
  </div>

  <div class="field">
    <%= form.label :place %>
    <%= form.text_field :place, id: :event_place %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.url_field :url, id: :event_url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
