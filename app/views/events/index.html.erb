<div class="container">

<h4><%= t('view.event') %><%= t('view.index') %></h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('view.event_hold_date') %></th>
      <th><%= t('view.event_name') %></th>
      <th><%= t('view.event_place') %></th>
      <th><%= t('view.event_user') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.hold_date.to_s(:event_date) %></td>
        <td><%= event.name %></td>
        <td><%= event.place %></td>
        <td><%= event.user.name %></td>
        <td><%= link_to '詳細', event_path(event) %></td>
        <% if event.user == current_user %>
          <td><%= link_to '編集', edit_event_path(event) %></td>
          <td><%= link_to '削除', event_path(event), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        <% else %>
          <td colspan="2"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'イベント新規作成', new_event_path, class: "btn btn-outline-primary" %>
<p style="margin: 5px">&nbsp;</p>

<%= link_to '戻る', root_path, class: "btn btn-outline-secondary btn-sm" %>
</div>
