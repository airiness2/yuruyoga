<ul class="list-group" style="max-width: 100%;">
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h6 class="mb-1"><%= comment.content %></h6>
          <small><%= User.find(comment.user_id).name %>&nbsp;&nbsp;
           <%= comment.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
           <% if comment.user_id == current_user.id %>
             &nbsp;&nbsp;<%= link_to '削除', diary_comment_path(@diary, comment), method: :delete,
                data: { confirm: '本当に削除しますか?' }, class: "btn btn-danger btn-sm" %>
           <% end %>
           </small>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
