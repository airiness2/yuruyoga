<div class="container">

<%= pie_chart @graphs %>

<p style="margin: 20px">&nbsp;</p>

<div class="row">
  <div class="w-50">
    <h4>好きなポーズランキング</h4>
      <table class="table">
        <thead>
          <tr>
            <th><%= t('view.rank') %></th>
            <th><%= t('view.pose_name') %></th>
          </tr>
        </thead>

        <tbody>
          <% i = 1 %>
          <% @like_poses.each do |like_pose| %>
            <tr>
              <td><%= i %></td>
              <td><%= like_pose.name %></td>
            </tr>
            <% i += 1 %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="w-50">
      <h4>苦手なポーズランキング</h4>
        <table class="table">
          <thead>
            <tr>
              <th><%= t('view.rank') %></th>
              <th><%= t('view.pose_name') %></th>
            </tr>
          </thead>

          <tbody>
            <% i = 1 %>
            <% @unlike_poses.each do |unlike_pose| %>
              <tr>
                <td><%= i %></td>
                <td><%= unlike_pose.name %></td>
              </tr>
              <% i += 1 %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
